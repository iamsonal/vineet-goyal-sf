{
    "name": "lds",
    "private": true,
    "description": "Lightning Data Service",
    "repository": {
        "type": "git",
        "url": "https://github.com/salesforce/lds-adapters.git"
    },
    "scripts": {
        "prepare": "yarn build",
        "build": "lerna run build",
        "clean": "lerna run clean; lerna clean --yes; rm -rf node_modules",
        "format:check": "prettier --check '**/*.{js,ts,json,md,yml,raml}'",
        "format:fix": "prettier --write '**/*.{js,ts,json,md,yml,raml}'",
        "generate-mock-data": "node ./scripts/mockDataGeneration/generateMockData.js",
        "lint": "eslint packages/ --ext=js,ts",
        "test:perf": "best",
        "test:unit": "jest --config ./scripts/jest/root.config.js",
        "test:integration": "lerna run --stream --scope @salesforce-lds-api/* --concurrency=1 test",
        "test:integration:compat": "lerna run --stream --scope @salesforce-lds-api/* --concurrency=1 test:compat",
        "test:memory": "rollup -c ./scripts/memory/rollup.config.js && node --expose-gc ./scripts/memory/build/test.js"
    },
    "devDependencies": {
        "@babel/core": "^7.6.4",
        "@babel/plugin-proposal-class-properties": "^7.5.5",
        "@babel/preset-env": "^7.6.3",
        "@babel/preset-typescript": "^7.6.0",
        "@best/cli": "^4.0.0-alpha9",
        "@best/runner-headless": "4.0.0-alpha9",
        "@best/runner-hub": "4.0.0-alpha9",
        "@best/store-aws": "4.0.0-alpha9",
        "@lwc/rollup-plugin": "~1.1.8",
        "@salesforce-lds/cli": "0.1.0-20200103-1",
        "@salesforce-lds/compiler": "0.1.0-20200103",
        "@salesforce-lds/engine": "0.1.0",
        "@salesforce-lds/lwc-lds": "0.1.0-20191231",
        "@types/jest": "^24.0.19",
        "@types/node": "^12.11.2",
        "@typescript-eslint/eslint-plugin": "^2.5.0",
        "@typescript-eslint/parser": "^2.5.0",
        "bundlesize": "^0.18.0",
        "chokidar": "^3.2.2",
        "es5-proxy-compat": "^0.22.0",
        "eslint": "^6.5.1",
        "eslint-plugin-jest": "^23.0.2",
        "glob": "^7.1.5",
        "husky": "^3.0.9",
        "jest": "^24.9.0",
        "karma": "^4.4.1",
        "karma-chrome-launcher": "^3.1.0",
        "karma-jasmine": "^2.0.1",
        "karma-jasmine-html-reporter": "^1.4.2",
        "karma-json-fixtures-preprocessor": "^0.0.6",
        "karma-sauce-launcher": "^2.0.2",
        "karma-spec-reporter": "^0.0.32",
        "lerna": "^3.18.2",
        "lint-staged": "^9.4.2",
        "lwc": "~1.1.8",
        "prettier": "^1.17.0",
        "pretty-bytes": "^5.3.0",
        "rollup": "^1.25.1",
        "rollup-plugin-babel": "^4.3.3",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-compat": "^0.22.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-replace": "^2.2.0",
        "rollup-plugin-typescript2": "^0.24.3",
        "sinon": "^7.5.0",
        "timekeeper": "^2.2.0",
        "ts-node": "^8.4.1",
        "typescript": "^3.6.4"
    },
    "dependencies": {},
    "workspaces": [
        "packages/*"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,json,md,yml,raml}": [
            "prettier --write",
            "git add"
        ],
        "packages/**/*.{js,ts}": [
            "eslint"
        ]
    }
}
