{
    "name": "lds-lightning-platform",
    "private": true,
    "description": "Lightning Platform; Lightning Data Service",
    "repository": {
        "type": "git",
        "url": "https://github.com/salesforce/lds-lightning-platform"
    },
    "scripts": {
        "build": "yarn test:versions && lerna run build",
        "build:ci": "yarn test:versions && lerna-parallelism run build",
        "clean": "lerna run clean; lerna clean --yes; rm -rf node_modules; rm -rf dist",
        "format:check": "prettier --check '**/*.{js,ts,json,md,yml,raml}'",
        "format:fix": "prettier --write '**/*.{js,ts,json,md,yml,raml}'",
        "generate-mock-data": "node ./scripts/mockDataGeneration/generateMockData.js",
        "lint": "eslint packages/ --ext=js,ts",
        "package:new": "node ./scripts/scaffold/run.js",
        "test": "yarn test:versions && yarn test:unit && yarn test:integration && yarn test:memory && yarn test:size",
        "test:perf": "best",
        "test:unit": "lerna run --stream --scope @salesforce/* --scope @mobileplatform/* test:unit -- --color",
        "test:unit:ci": "lerna-parallelism run --stream --scope @salesforce/* --scope @mobileplatform/* test:unit -- --color",
        "test:unit:coverage": "yarn test:unit --coverage",
        "test:unit:coverage:ci": "yarn test:unit:ci --coverage --ci",
        "test:debug": "node --inspect-brk node_modules/jest/bin/jest.js --config ./scripts/jest/root.config.js --runInBand",
        "test:integration": "lerna run --stream --scope @salesforce/* test",
        "test:integration:ci": "lerna-parallelism run --stream --scope @salesforce/* --concurrency=1 test",
        "test:integration:compat": "lerna run --stream --scope @salesforce/* test:compat",
        "test:integration:compat:ci": "lerna-parallelism run --stream --scope @salesforce/* --concurrency=1 test:compat",
        "test:memory": "rollup -c ./scripts/memory/rollup.config.js && node --expose-gc ./scripts/memory/build/test.js",
        "test:size": "lerna run --scope @salesforce/* --scope @mobileplatform/* test:size",
        "test:versions": "./scripts/release/parse-versions.sh",
        "release:adapters:corejar": "lerna run --scope @salesforce/* release:corejar",
        "release:adapters:corejar:ci": "lerna-parallelism run --scope @salesforce/* release:corejar",
        "release:corejar": "yarn release:adapters:corejar && lerna run release:core-package",
        "release:corejar:ci": "yarn release:adapters:corejar:ci && lerna-paralleism run release:core-package",
        "release:adapters": "lerna run --scope @salesforce/* release:core",
        "release:adapters:local": "lerna run --scope @salesforce/* release:core -- --auto-checkout --skip-clean",
        "release": "yarn release:adapters && ./scripts/release/core.js",
        "release:local": "./scripts/release/core.js --skip-git-check --auto-checkout --skip-clean && yarn release:adapters:local",
        "release:local:skipbuild": "./scripts/release/core.js --skip-git-check --auto-checkout --skip-build && yarn release:adapters:local",
        "link:luvio": "yarn link @luvio/engine @luvio/environments @luvio/compiler @luvio/adapter-test-library @luvio/lwc-luvio && lerna exec -- yarn link @luvio/engine @luvio/environments @luvio/compiler @luvio/adapter-test-library @luvio/lwc-luvio",
        "unlink:luvio": "yarn unlink @luvio/engine @luvio/environments @luvio/compiler @luvio/adapter-test-library @luvio/lwc-luvio; lerna exec --no-bail -- yarn unlink @luvio/engine @luvio/environments @luvio/compiler @luvio/adapter-test-library @luvio/lwc-luvio"
    },
    "devDependencies": {
        "@babel/core": "^7.6.4",
        "@babel/plugin-proposal-class-properties": "^7.5.5",
        "@babel/preset-env": "^7.6.3",
        "@babel/preset-typescript": "^7.6.0",
        "@best/cli": "4.0.0-beta10",
        "@best/runner-headless": "4.0.0-beta10",
        "@best/runner-remote": "4.0.0-beta10",
        "@best/store-aws": "4.0.0-beta10",
        "@luvio/adapter-test-library": "0.59.0",
        "@luvio/cli": "0.59.0",
        "@luvio/compiler": "0.59.0",
        "@luvio/engine": "0.59.0",
        "@luvio/environments": "0.59.0",
        "@luvio/lwc-luvio": "0.59.0",
        "@lwc/rollup-plugin": "~1.6.2",
        "@oclif/command": "^1.6.1",
        "@rollup/plugin-alias": "^3.1.1",
        "@types/dedent": "^0.7.0",
        "@types/jest": "^25.1.5",
        "@types/mkdirp": "^1.0.1",
        "@types/node": "^12.11.2",
        "@typescript-eslint/eslint-plugin": "^2.5.0",
        "@typescript-eslint/parser": "^2.5.0",
        "babel-plugin-module-resolver": "^4.0.0",
        "bundlesize": "^0.18.1",
        "camelcase": "^6.0.0",
        "chokidar": "^3.2.2",
        "cli-spinners": "^2.3.0",
        "es5-proxy-compat": "^0.22.0",
        "eslint": "^6.5.1",
        "eslint-plugin-jest": "^23.0.2",
        "glob": "^7.1.5",
        "graphql": "15.5.0",
        "husky": "^3.0.9",
        "inquirer": "^7.1.0",
        "jest": "25.5.4",
        "karma": "^4.4.1",
        "karma-chrome-launcher": "^3.1.0",
        "karma-jasmine": "^2.0.1",
        "karma-jasmine-html-reporter": "^1.4.2",
        "karma-json-fixtures-preprocessor": "^0.0.6",
        "karma-sauce-launcher": "^2.0.2",
        "karma-spec-reporter": "^0.0.32",
        "lerna": "^3.18.2",
        "lerna-parallelism": "^0.1.3",
        "lint-staged": "^9.4.2",
        "lwc": "~1.7.5",
        "mkdirp": "^1.0.4",
        "ora": "^4.0.4",
        "prettier": "^2.3.0",
        "pretty-bytes": "^5.3.0",
        "rollup": "^1.25.1",
        "rollup-plugin-babel": "^4.3.3",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-compat": "^0.22.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-replace": "^2.2.0",
        "rollup-plugin-typescript2": "^0.24.3",
        "sinon": "^7.5.0",
        "timekeeper": "^2.2.0",
        "ts-node": "^8.4.1",
        "typescript": "^3.8.0",
        "yaml": "^1.10.0"
    },
    "dependencies": {},
    "workspaces": [
        "packages/*"
    ],
    "files": [],
    "volta": {
        "node": "14.16.0",
        "yarn": "1.22.10"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,json,md,yml,raml}": [
            "prettier --write",
            "git add"
        ],
        "packages/**/*.{js,ts}": [
            "eslint"
        ]
    }
}
