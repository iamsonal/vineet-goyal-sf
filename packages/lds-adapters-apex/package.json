{
    "name": "@salesforce/lds-adapters-apex",
    "version": "0.1.13",
    "description": "Wire adapters for Apex",
    "license": "MIT",
    "main": "dist/umd/es2018/apex-service.js",
    "module": "dist/es/es2018/apex-service.js",
    "types": "dist/types/src/main.d.ts",
    "files": [
        "dist",
        "sfdc",
        "src/raml/*"
    ],
    "scripts": {
        "clean": "rm -rf dist sfdc src/generated karma/dist",
        "build": "yarn build:raml && yarn build:services && yarn build:karma-utils",
        "build:raml": "lds generate src/raml/lds.raml src/generated",
        "build:services": "rollup --config rollup.config.js",
        "build:karma-utils": "rollup --config rollup.config.karma.js",
        "start": "karma start",
        "test": "karma start --single-run",
        "test:compat": "karma start --single-run --compat",
        "test:unit": "jest"
    },
    "publishConfig": {
        "registry": "https://npm.lwcjs.org"
    },
    "dependencies": {
        "@salesforce/lds-bindings": "0.1.13"
    },
    "devDependencies": {
        "@salesforce/lds-karma-config": "0.1.13"
    }
}
