{
    "name": "@salesforce/lds-adapters-commerce-catalog",
    "version": "0.1.13",
    "description": "Wire adapters Commerce Catalog",
    "license": "MIT",
    "main": "dist/umd/es2018/commerce-catalog.js",
    "module": "dist/es/es2018/commerce-catalog.js",
    "types": "dist/es/es2018/index.d.ts",
    "scripts": {
        "clean": "rm -rf dist src/generated karma/dist",
        "build": "yarn build:raml && yarn build:services && yarn build:karma-utils",
        "build:raml": "lds generate src/raml/lds.raml src/generated",
        "build:services": "rollup --config rollup.config.js",
        "build:karma-utils": "rollup --config rollup.config.karma.js",
        "start": "karma start",
        "test": "karma start --single-run",
        "test:compat": "karma start --single-run --compat"
    },
    "devDependencies": {
        "@salesforce/lds-karma-config": "0.1.13"
    }
}
