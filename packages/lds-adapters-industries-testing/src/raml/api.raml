#%RAML 1.0
securedBy:
  - OAuth2
title: Salesforce Connect API
version: '55.0'
mediaType: application/json
protocols:
  - https
baseUri: /services/data/v55.0
securitySchemes:
  OAuth2:
    type: OAuth 2.0
    settings:
      authorizationUri: https://example.com/oauth/authorize
      accessTokenUri: ''
      authorizationGrants:
        - implicit
annotationTypes:
  oas-readOnly:
    type: boolean
    allowedTargets: TypeDeclaration
  oas-collectionFormat:
    type: string
  oas-body-name:
    type: string
    allowedTargets: TypeDeclaration
types:
  ActionOutputRepresentation:
    description: Action Output
    type: object
    properties:
      actionType:
        description: Action Type.
        type: string
        enum:
          - AssignParameterValues
          - CreditPoints
          - DebitPoints
          - GetMemberAttributeValues
          - GetMemberPointBalance
          - GetMemberTier
          - GetOutputsFromDecisionTable
          - IncreaseUsageForCumulativePromotion
          - IssueVoucher
          - RunFlow
          - UpdateUsageForCumulativePromotion
      promotionId:
        description: Promotion Id.
        type: string | nil
      stepName:
        description: Step Name.
        type: string
  CreditPointsActionOutputRepresentation:
    description: Credit Points Action Output
    type: ActionOutputRepresentation
    properties:
      changeInEscrowPointsBalance:
        description: The change in the escrow points balance of the loyalty program
          member associated with the transaction journal.
        format: double
        type: number | nil
      changeInPointsBalance:
        description: The change in the points balance of the loyalty program member
          associated with the transaction journal.
        format: double
        type: number | nil
      escrowPointsCreditDate:
        description: Escrow Points Credit Date.
        type: string | nil
      loyaltyProgramCurrencyName:
        description: The name of the loyalty program currency for which points have
          been debited from or credited to the loyalty program member associated with
          the transaction journal.
        type: string
  DebitPointsActionOutputRepresentation:
    description: Debit Points Action Output
    type: ActionOutputRepresentation
    properties:
      changeInPointsBalance:
        description: The change in the points balance of the loyalty program member
          associated with the transaction journal.
        format: double
        type: number | nil
      loyaltyProgramCurrencyName:
        description: The name of the loyalty program currency for which points have
          been debited from or credited to the loyalty program member associated with
          the transaction journal.
        type: string
  ExpressionRepresentation:
    description: Wrapper for Expression.
    type: object
    properties:
      dataType:
        description: Data Type of Expression Value.
        type: string
        enum:
          - Boolean
          - Date
          - DateTime
          - Numeric
          - Sobject
          - Text
      expression:
        description: Expression.
        type: string
      expressionValue:
        description: expression Value
        type: object
      parameterValues:
        description: List of parameter values provided for an expression.
        type: object
        properties:
          //:
            type: object
      resolvedExpression:
        description: The resolved fields and values of an expression.
        type: string
  FormulaInputRepresentation:
    description: Formula Input Representation
    type: object
    properties:
      dataType:
        description: required dataType of the expression
        type: string
      expression:
        description: expression to validate
        type: string
  FormulaOutputRepresentation:
    description: Formula Validation POST Response representation
    type: object
    properties:
      errorMessage:
        description: Represents the Error Message. Message stating the reason for
          error, if any.
        type: string | nil
      isValid:
        description: Returns TRUE or FALSE. Indicates whether the formula is valid
          (true) or invalid (false).
        type: boolean
  FormulaSyntaxValidationInputRepresentation:
    description: Formula Syntax Validation Input Representation
    type: object
    properties:
      formulas:
        description: List of expressions to validate
        type: array
        items:
          type: object
  FormulaSyntaxValidationOutputRepresentation:
    description: Formula Syntax Validation POST Response representation
    type: object
    properties:
      validationResponse:
        description: Represents the validation response for the list of formulas.
        type: array
        items:
          type: FormulaOutputRepresentation
