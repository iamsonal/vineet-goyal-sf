        type: string | nil
      processResult:
        description: List of the records created and updated.
        type: ProcessResultRepresentation | nil
      simulationResults:
        description: The results of the simulation.
        type: TransactionJournalOutputRepresentation | nil
      status:
        description: Returns TRUE or FALSE. Indicates whether the request succeeded
