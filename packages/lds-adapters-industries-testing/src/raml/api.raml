        type: integer | nil
      effectiveDate:
        description: Effective Date.
        type: string | nil
      expiryDate:
        description: Expiry Date.
        type: string | nil
      faceValue:
        description: Face Value.
        format: double
        type: number | nil
      productId:
        description: Product Id.
        type: string | nil
      voucherCode:
        description: Voucher Code.
        type: string
      voucherId:
        description: Voucher Id.
        type: string
