{
    "name": "@salesforce/lds-adapters-uiapi",
    "version": "0.1.12",
    "description": "Wire adapters for record related UI API endpoints",
    "license": "MIT",
    "main": "dist/umd/es2018/uiapi-records-service.js",
    "module": "dist/es/es2018/uiapi-records-service.js",
    "types": "dist/es/es2018/index.d.ts",
    "scripts": {
        "clean": "rm -rf dist src/generated karma/dist",
        "build": "yarn build:raml && yarn build:services && yarn build:karma-utils",
        "build:raml": "lds generate src/raml/lds.raml src/generated -p '../lds-compiler-plugins'",
        "build:services": "rollup --config rollup.config.js",
        "build:karma-utils": "rollup --config rollup.config.karma.js",
        "start": "karma start",
        "start:mobile": "karma start --webview",
        "test": "karma start --single-run",
        "test:compat": "karma start --single-run --compat",
        "test:mobile": "karma start --single-run --webview",
        "test:unit": "jest",
        "test:overrides": "jest --testPathPattern=src/overrides"
    },
    "devDependencies": {
        "@salesforce/lds-karma-config": "0.1.12",
        "@salesforce/lds-compiler-plugins": "0.1.12"
    }
}
