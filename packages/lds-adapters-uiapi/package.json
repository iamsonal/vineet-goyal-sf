{
    "name": "@salesforce/lds-adapters-uiapi",
    "version": "0.1.13",
    "description": "Wire adapters for record related UI API endpoints",
    "license": "MIT",
    "main": "dist/umd/es2018/uiapi-records-service.js",
    "module": "dist/es/es2018/uiapi-records-service.js",
    "types": "dist/types/src/main.d.ts",
    "files": [
        "dist",
        "sfdc",
        "src/raml/*"
    ],
    "scripts": {
        "clean": "rm -rf dist sfdc src/generated karma/dist",
        "build": "yarn build:raml && yarn build:services && yarn build:karma",
        "build:karma": "rollup --config rollup.config.karma.js",
        "build:raml": "lds generate src/raml/lds.raml src/generated -p './scripts/lds-uiapi-plugin.js'",
        "build:services": "rollup --config rollup.config.js",
        "start": "karma start",
        "start:mobile": "karma start --webview",
        "test": "karma start --single-run",
        "test:compat": "karma start --single-run --compat",
        "test:mobile": "karma start --single-run --webview",
        "test:unit": "jest",
        "test:size": "bundlesize",
        "test:overrides": "jest --testPathPattern=src/overrides",
        "release:core": "../../scripts/release/core.js --adapter=lds-adapters-uiapi"
    },
    "sfdc": {
        "addition": [
            "uiapi-static-functions"
        ]
    },
    "publishConfig": {
        "registry": "https://npm.lwcjs.org"
    },
    "dependencies": {
        "@salesforce/lds-bindings": "0.1.13"
    },
    "devDependencies": {
        "@salesforce/lds-compiler-plugins": "0.1.13",
        "@salesforce/lds-karma": "0.1.13",
        "@salesforce/lds-jest": "0.1.13"
    },
    "bundlesize": [
        {
            "path": "./sfdc/index.js",
            "maxSize": "75 kB",
            "compression": "brotli"
        }
    ]
}
