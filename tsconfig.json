{
    "compilerOptions": {
        "strict": true,

        "declaration": true,
        "sourceMap": true,

        "moduleResolution": "node",
        "esModuleInterop": true,

        "target": "es2018",

        "baseUrl": ".",
        "paths": {
            // TS complains about not being able to infer the WireAdapterConstructor
            // type without this path setup
            "@lwc/engine-core": ["node_modules/@lwc/engine-core"]
        }
    },
    "exclude": ["**/__tests__"]
}
